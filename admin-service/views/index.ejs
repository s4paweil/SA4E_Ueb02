<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <title>Admin Dashboard</title>
</head>
<body>
    <h1>WÃ¼nsche Verwaltung</h1>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Wunsch</th>
                <th>Status</th>
                <th>Aktionen</th>
            </tr>
        </thead>
        <tbody>
            <% wishes.forEach(wish => { %>
            <tr>
                <td><%= wish.name %></td>
                <td><%= wish.wish %></td>
                <td><%= wish.status %></td>
                <td>
                    <form action="/update-status" method="POST" style="display: inline;">
                        <input type="hidden" name="id" value="<%= wish._id %>">
                        <select name="status" onchange="this.form.submit()">
                            <option value="formuliert" <%= wish.status === "formuliert" ? "selected" : "" %>>Formuliert</option>
                            <option value="in Bearbeitung" <%= wish.status === "in Bearbeitung" ? "selected" : "" %>>In Bearbeitung</option>
                            <option value="in Auslieferung" <%= wish.status === "in Auslieferung" ? "selected" : "" %>>In Auslieferung</option>
                            <option value="unter dem Baum" <%= wish.status === "unter dem Baum" ? "selected" : "" %>>Unter dem Baum</option>
                        </select>
                    </form>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>
